<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/row_surah"
android:layout_width="match_parent"
android:orientation="vertical"
android:layoutDirection="rtl"
android:paddingLeft="5dp"
android:paddingRight="5dp"
android:paddingTop="2dp"
android:paddingBottom="2dp"
android:background="#ECECEC"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="2pt"
    android:paddingBottom="4pt"
    android:gravity="center"
    android:paddingTop="4pt"
    android:background="@drawable/menuback"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/menuback"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgchannel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/quran_recites"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="8dp"
        android:layout_weight="0" />

    <TextView
        android:gravity="center"
        android:background="@drawable/menuback"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="فضيلة الشيخ ماهر المعيقلي"
        android:id="@+id/surah_arabic"
        android:layout_toLeftOf="@+id/imgchannel"
        android:layout_alignBottom="@+id/imgchannel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_weight="1" />

    <ImageView
        android:background="@drawable/menuback"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/backirrow"

        android:layout_weight="0" />
</LinearLayout>

</LinearLayout>