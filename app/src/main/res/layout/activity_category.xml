<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="#fff8e1"
    tools:context=".CategoryActivity"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:weightSum="4">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/homeAct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableRight="@drawable/right"
                android:textColor="#000"
                android:background="@drawable/button_shape"
                android:textSize="18sp"
                android:text="الرئيسية" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center"
                android:drawableLeft="@drawable/left"
                android:background="@drawable/button_shape"
                android:textColor="#000"
                android:text="الاجزاء" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/button_shape"
                android:drawableRight="@drawable/right"
                android:textSize="18sp"
                android:text="الاحزاب" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:drawableLeft="@drawable/left"
                android:text="الايات" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView44445"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:id="@+id/textView444"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/button_shape"
                android:gravity="center"
                android:drawableRight="@drawable/right"
                android:textSize="18sp"
                android:text="ايات الساجده" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView47"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/quran5" />

            <TextView
                android:id="@+id/textView4666"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/left"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="أسماء الله الحسنى" />
        </LinearLayout>

    </TableRow>
</TableLayout>
</LinearLayout>